@{
    ViewData["Title"] = "Cadastro";
}
@{
    ViewData["mensagem"] = "Sistema de Gerenciamento do Buffet Comida Mineira";
}
<br />
<center>
    <form method="get" style="background-color:rgb(217,251,221); text-align:left; border-style:solid; border-color:black; border-width:4px; padding:12px; width:550px;">
        <h4 style="text-align:center;">Insira seus dados abaixo para realizar o cadastramento:</h4><br>
        <div class="form-group">
            <label style="line-height:40px;height:40px;" for="nome">Nome:&nbsp;&nbsp;</label>
            <input style="width:300px; float:right; position:relative; right:0%;" required type="text" class="form-control" name="nome" id="nome" placeholder="Insira aqui seu nome">
        </div>
        <div class="form-group">
            <label style="line-height:40px; height:40px;" for="cpf">CPF:&nbsp;&nbsp;</label>
            <input style="width:300px; float:right; position:relative; right:0%;" required type="text" class="form-control" name="cpf" id="cpf" placeholder="Insira aqui seu CPF (apenas números)">
        </div>
        <div class="form-group">
            <div style="text-align:left;display:inline-block;"><label style="line-height:20px; height:40px;" for="matricula">Matrícula institucional ou<br />numero do pedido:&nbsp;&nbsp;</label></div>
            <input style="width:300px; float:right; position:relative; right:0%;" required type="text" class="form-control" name="matricula" id="matricula" placeholder="Insira aqui sua matrícula">
        </div>
        <div class="form-group">
            <label style="line-height:40px;height:40px;" for="email">E-mail:&nbsp;&nbsp;</label>
            <input style="width:300px; float:right; position:relative; right:0%;" required type="email" class="form-control" name="email" id="email" placeholder="Insira aqui seu e-mail">
        </div>
        <div>
            <span>Sexo:&nbsp;&nbsp;</span><div style="display:inline-block; position:relative; float:right;">
                <input class="form-control" style="width:15px; height: 15px; display:inline-block;" type="radio" checked id="masculino" required name="sexo" value="m">&nbsp;<label for="masculino">Masculino</label>&nbsp;&nbsp;&nbsp;
                <input class="form-control" style="width:15px; height:15px; display:inline-block;" type="radio" required id="feminino" name="sexo" value="f">&nbsp;<label for="feminino">Feminino</label>
            </div>
        </div><br>
        <div>
            <label style="line-height:40px; height:40px;" for="vinculo">Tipo de vínculo:&nbsp;&nbsp;</label>
            <select size="1" name="vinculo" id="vinculo" class="form-control" style="text-align:center; width:230px; position:relative; float:right; right:0%;">
                <optgroup label="-- Marque a sua opção --">
                    <option id="f" value="f">Funcionário</option>
                    <option id="c" value="c">Cliente</option>
                </optgroup>
            </select><br><br>
            <p style="font-weight:bold;font-style:italic;text-align:center;">OBS: Você receberá automaticamente a senha por e-mail, após um cadastro bem-sucedido.</p>
        </div><br />
        <div style="text-align:center;">
            <button name="idButton" value="1" type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</center>